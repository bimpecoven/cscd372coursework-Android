<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.impecoven.blake.bimpecovenlab8.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#1b1b1b">

    <com.impecoven.blake.bimpecovenlab8.AspectRatioImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/view"
        android:layout_alignParentTop="true"
        custom:aspectRatio="0.5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/linearLayout"
        android:layout_toRightOf="@+id/linearLayout" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayout"
        android:orientation="vertical"
        android:layout_alignRight="@+id/view"
        android:layout_alignEnd="@+id/view"
        android:layout_toLeftOf="@+id/view"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/linearLayout"
        android:layout_toEndOf="@+id/linearLayout"
        android:layout_marginBottom="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/cell00"
                android:src="@drawable/blank"
                android:layout_weight="1"
                android:background="#d0d0d0" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView14"
                android:src="@drawable/vert"
                android:layout_weight="0.05" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/cell01"
                android:layout_column="2"
                android:src="@drawable/blank"
                android:layout_weight="1"
                android:background="#d0d0d0" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView16"
                android:src="@drawable/vert"
                android:layout_weight="0.05" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/cell02"
                android:src="@drawable/blank"
                android:layout_weight="1"
                android:background="#d0d0d0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_weight="0.05" >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView18"
                android:src="@drawable/horiz"
                android:scaleType="fitXY"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1" >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/cell10"
                android:src="@drawable/blank"
                android:layout_weight="1"
                android:background="#d0d0d0" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView8"
                android:src="@drawable/vert"
                android:layout_weight="0.05" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/cell11"
                android:src="@drawable/blank"
                android:layout_weight="1"
                android:background="#d0d0d0" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView10"
                android:layout_column="3"
                android:src="@drawable/vert"
                android:layout_weight="0.05" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/cell12"
                android:src="@drawable/blank"
                android:layout_weight="1"
                android:background="#d0d0d0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="0.05" >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:id="@+id/imageView12"
                android:src="@drawable/horiz"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/cell20"
                android:src="@drawable/blank"
                android:layout_weight="1"
                android:background="#d0d0d0" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView2"
                android:src="@drawable/vert"
                android:layout_weight="0.05" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/cell21"
                android:layout_column="2"
                android:src="@drawable/blank"
                android:layout_weight="1"
                android:background="#d0d0d0" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView4"
                android:src="@drawable/vert"
                android:layout_weight="0.05" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/cell22"
                android:src="@drawable/blank"
                android:layout_weight="1"
                android:background="#d0d0d0" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/xImage"
        android:src="@drawable/x"
        android:layout_above="@+id/tableLayout"
        android:layout_toLeftOf="@+id/restart"
        android:layout_toStartOf="@+id/restart" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Over"
        android:id="@+id/restart"
        android:layout_above="@+id/tableLayout"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/xImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tic TacToe"
        android:id="@+id/textView"
        android:textSize="45sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#d0d0d0" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/oImage"
        android:src="@drawable/o"
        android:layout_above="@+id/tableLayout"
        android:layout_toRightOf="@+id/restart"
        android:layout_toEndOf="@+id/restart" />

</RelativeLayout>